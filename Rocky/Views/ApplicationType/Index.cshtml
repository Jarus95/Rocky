
@model List<Rocky.Models.ApplicationType>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">ApplicationType List</h2>
        </div>

        <div class="col-6">
            <a asp-action="Create" class="btn btn-primary">
                Create New ApplicationType
            </a>
        </div>
    </div>
    <br /> <br />

    @if (Model.Count > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>

                    <th>Name</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="90%">  @item.Name</td>
                        <td class="w-60 btn-group" role="group">
                            <a asp-route-id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fa-solid fa-pen-to-square"></i>

                            </a>

                            <a asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="fa-solid fa-delete-left"></i>
                            </a>
                        </td>
                    </tr>


                }
            </tbody>
        </table>
    }
    else
    {
        <p>Application not excist</p>
    }
</div>
