@model Rocky.Models.ViewModels.HomeVM

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center">
        <button class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach (var item in Model.Categories)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@item.Name.Replace(' ', '-')">@item.Name</button>
        }
    </div>

    @foreach (var item in Model.Products)
    {
        <partial name="_IndividualProductCard" model="item"/>
    
    }

</div>
