@model Rocky.Models.ProductVM
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
  
    <div class="container p-3">
        <input asp-for="Product.Id" hidden />
        <div class="row">
            <h2 class="text-info pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Name"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Product.Name" class="form-control" value="@Model.Product.Name"  />
          
                    </div>

                </div>
                <br />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Price"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Product.Price" class="form-control" value="@Model.Product.Price" />
                      
                    </div>

                </div>

                <br />

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea disabled asp-for="Product.Description" class="form-control summernote"></textarea>
                     
                    </div>

                </div>

               
                

                <br />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select disabled asp-for="Product.CategoryId" asp-items="@Model.selectListItems" class="form-control">
                            <option disabled selected>--Select Category--</option>
                        </select>

                    </div>

                </div>

                <br />

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"> Back</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-4">
                <img src="~/images/product/@Model.Product.Image" width="100%" />
            </div>
        </div>




    </div>

    </div>
</form>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>

      
    </script>


}